{
  "name": "basecamp-site-theme",
  "version": 1,
  "source": "https://www.basecampdataanalytics.com/",
  "typography": {
    "headings": {
      "fontFamily": [
        "Anton",
        "sans-serif"
      ],
      "fontWeight": 700,
      "lineHeight": 1.2,
      "letterSpacing": -0.01
    },
    "body": {
      "fontFamily": [
        "Epilogue",
        "sans-serif"
      ],
      "fontWeight": 400,
      "lineHeight": 1.6,
      "letterSpacing": 0
    },
    "misc": {
      "fontFamily": [
        "Epilogue",
        "sans-serif"
      ]
    },
    "scale": {
      "h1": {
        "size": "clamp(2rem, 4vw, 3rem)",
        "weight": 800
      },
      "h2": {
        "size": "clamp(1.5rem, 3vw, 2.25rem)",
        "weight": 700
      },
      "h3": {
        "size": "1.5rem",
        "weight": 700
      },
      "body": {
        "size": "1rem",
        "weight": 400
      },
      "small": {
        "size": "0.875rem",
        "weight": 400
      }
    }
  },
  "colors": {
    "brand": {
      "primary": "#495a58",
      "primaryContrast": "#ffffff",
      "accent": "#d4967d",
      "accentContrast": "#ffffff"
    },
    "surface": {
      "background": "#e5e3dc",
      "muted": "#303636",
      "card": "#ffffff",
      "elevated": "#ffffff"
    },
    "text": {
      "primary": "#303636",
      "secondary": "#495a58",
      "muted": "#d4967d",
      "onDark": "#ffffff"
    },
    "borders": {
      "subtle": "#e5e3dc",
      "default": "#495a58",
      "strong": "#303636"
    },
    "state": {
      "success": "#16A34A",
      "warning": "#F59E0B",
      "danger": "#DC2626",
      "info": "#0EA5E9"
    },
    "buttons": {
      "primaryBg": "#d4967d",
      "primaryText": "#ffffff",
      "secondaryBg": "#e5e3dc",
      "secondaryText": "#303636",
      "outlineBorder": "#495a58"
    }
  },
  "components": {
    "card": {
      "radius": 16,
      "shadow": "0 8px 24px rgba(2, 6, 23, 0.06)",
      "padding": 20
    },
    "chip": {
      "radius": 9999,
      "paddingX": 12,
      "paddingY": 6
    },
    "navbar": {
      "height": 64,
      "background": "#495a58",
      "text": "#ffffff"
    }
  },
  "map": {
    "markerLocked": "#e5e3dc",
    "markerUnlocked": "#d4967d",
    "geofence": "rgba(212, 150, 125, 0.25)"
  },
  "cssVariables": {
    "--bc-bg": "#e5e3dc",
    "--bc-text": "#303636",
    "--bc-accent": "#d4967d",
    "--bc-accent-contrast": "#ffffff",
    "--bc-muted": "#303636",
    "--bc-border": "#495a58"
  }
}